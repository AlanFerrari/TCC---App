<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Perfil_Advogados_Cli">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cor_fundo"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:menu="@menu/menu_navegacao_cliente"
                app:navigationIcon="@drawable/ic_baseline_arrow_back"
                app:title="@string/app_name" />

        </com.google.android.material.appbar.AppBarLayout>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/perfil_circulo"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_account_circle" />

        <TextView
            android:id="@+id/nomeAdvogadoCli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/verde"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Email: "
                android:textStyle="bold"
                android:textColor="@color/dourado"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/emailCli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textColorHint="@color/verde"
                android:textSize="21sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Whatsapp: "
                android:textStyle="bold"
                android:textColor="@color/dourado"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/telefoneCli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textColorHint="@color/verde"
                android:textSize="21sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Área de Atuação"
            android:textStyle="bold"
            android:textColor="@color/dourado"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/area_atuacaoCli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:textColorHint="@color/verde"
            android:textSize="21sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Estado: "
                android:textStyle="bold"
                android:textColor="@color/dourado"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/estadoCli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="@color/verde"
                android:textSize="21sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Cidade: "
                android:textStyle="bold"
                android:textColor="@color/dourado"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/cidadeCli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="@color/verde"
                android:textSize="21dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Registro na OAB: "
                android:textStyle="bold"
                android:textColor="@color/dourado"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/registroOABCli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:textColorHint="@color/verde"
                android:textSize="21sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="Bibliografia"
            android:textStyle="bold"
            android:textColor="@color/dourado"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/bibliografiaCli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:textColorHint="@color/verde"
            android:textSize="21sp" />

            <Button
                android:id="@+id/Whatsapp"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="40dp"
                android:text="Conversar"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="19sp" />

    </LinearLayout>

</ScrollView>